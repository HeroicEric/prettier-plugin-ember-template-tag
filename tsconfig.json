{
  "extends": "@tsconfig/node-lts-strictest/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2015"], // match prettier
    "target": "es2015", // match prettier
    "useDefineForClassFields": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "ignoreDeprecations": "5.0" // until @tsconfig/node-lts-strictest is updated
  },
  "include": ["src"]
}
